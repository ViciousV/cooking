<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Cook 1</th>
      <th>Cook 2</th>
      <th>Cook 3</th>
      <th>Eat 1</th>
      <th>Eat 2</th>
      <th>Eat 3</th>
      <th>Eat 4</th>
      <th>Eat 5</th>
      <th>Eat 6</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.cook_1 %></td>
        <td><%= event.cook_2 %></td>
        <td><%= event.cook_3 %></td>
        <td><%= event.eat_1 %></td>
        <td><%= event.eat_2 %></td>
        <td><%= event.eat_3 %></td>
        <td><%= event.eat_4 %></td>
        <td><%= event.eat_5 %></td>
        <td><%= event.eat_6 %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

